{
	"height": 30,
	"spacing": 4,
	"modules-left": ["sway/workspaces", "sway/mode", "sway/scratchpad"],
	"modules-right": [
		"idle_inhibitor",
		"memory",
		"custom/fan",
		"temperature",
		"backlight",
		"network",
		"battery",
		"pulseaudio",
		"clock",
		"privacy",
		"tray"
	],
	"sway/mode": {
		"format": "<span style=\"italic\">{}</span>"
	},
	"sway/scratchpad": {
		"format": "{icon} {count}",
		"show-empty": false,
		"format-icons": ["", "ï‹’"],
		"tooltip": true,
		"tooltip-format": "{app}: {title}"
	},
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "ï®",
			"deactivated": "ï°"
		}
	},
	"tray": {
		// "icon-size": 21,
		"spacing": 10
	},
	"clock": {
		"format": "{:%a %Y/%m/%d %H:%M}",
		"tooltip-format": "<span size='12pt'>{calendar}</span>",
		"calendar": {
			"mode": "year",
			"mode-mon-col": 3,
			"on-scroll": 1,
			"format": {
				"months": "<span color='#a6da95'><b>{}</b></span>",
				"days": "<span color='#cad3f5'><b>{}</b></span>",
				"weekdays": "<span color='#8bd5ca'><b>{}</b></span>",
				"today": "<span color='#ee99a0'><b><u>{}</u></b></span>"
			}
		},
		"actions": {
			"on-click-right": "mode",
			"on-scroll-up": "tz_up",
			"on-scroll-down": "tz_down",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},
	"memory": {
		"format": "{used:0.2f}/{total:0.2f} GiB",
		"tooltip": false,
		"interval": 5
	},
	"temperature": {
		"interval": 5,
		"critical-threshold": 80,
		"format": "{temperatureC}Â°C",
		"tooltip": false
	},
	"backlight": {
		"format": "{icon} {percent}%",
		"format-icons": ["ğŸŒ‘", "ğŸŒ˜", "ğŸŒ—", "ğŸŒ–", "ğŸŒ•"],
		"tooltip": false
	},
	"battery": {
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format-time": "{H:02}:{M:02}",
		"format": "{icon} {capacity}% ({power:0.2f}W|{time})",
		"format-full": "{icon} {capacity}% (({power:0.2f}W|{time}))",
		"format-charging": "ïƒ§ {capacity}% ({power:0.2f}W|{time})",
		"format-plugged": "ï‡¦ {capacity}%",
		"format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
		"tooltip": false,
		"interval": 5
	},
	"network": {
		"format-wifi": "ï‡« {signalStrength}%",
		"format-ethernet": "{ipaddr}/{cidr}",
		"tooltip-format": "{essid}: {ifname} via {gwaddr}",
		"format-linked": "{ifname} (No IP)",
		"format-disconnected": "Disconnected",
		"format-alt": "{essid}: {ifname}: {ipaddr}/{cidr}"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-bluetooth": "{icon}ïŠ” {volume}% {format_source}",
		"format-bluetooth-muted": "ïš© {icon}ïŠ” {volume}% {format_source}",
		"format-muted": "ïš© {volume}% {format_source}",
		"format-icons": {
			"headphone": "ï€¥",
			"hands-free": "ï–",
			"headset": "ï–",
			"phone": "ï‚•",
			"portable": "ï‚•",
			"car": "ï†¹",
			"default": ["ï€¦", "ï€§", "ï€¨"]
		},
		"on-click": "pavucontrol"
	},
	"custom/fan": {
		"exec": "$HOME/.scripts/fan.zsh",
		"interval": 5,
		"format": "{text}",
		"return-type": "json"
	}
}
