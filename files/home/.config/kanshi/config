profile laptop {
    output eDP-1 enable position 0,0 scale 1
}

profile external-only {
    output HDMI-A-1 enable position 0,0 scale 1
    output eDP-1 disable
}


profile extend-right-1080 {
    output eDP-1 enable position 0,0 scale 1
    output HDMI-A-1 enable mode 1920x1080@60Hz position 1920,0 scale 1
}

profile extend-left-1080 {
    output HDMI-A-1 enable mode 1920x1080@60Hz position 0,0 scale 1
    output eDP-1 enable position 1920,0 scale 1
}
